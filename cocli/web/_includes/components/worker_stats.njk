<div id="worker-heartbeats-container" style="display:none; margin: 40px 0;">
    <h3>Worker Heartbeats (S3)</h3>
    <table class="report-table">
        <thead>
            <tr>
                <th>Hostname</th>
                <th>Status</th>
                <th>Tasks (S/D/E)</th>
                <th>CPU/Mem</th>
                <th>Last Heartbeat</th>
            </tr>
        </thead>
        <tbody id="worker-heartbeats-body">
        </tbody>
    </table>
</div>

<div id="worker-stats-container" style="display:none; margin: 40px 0;">
    <h3>Processing Sources (GM Details)</h3>
    <table class="report-table">
        <thead>
            <tr>
                <th>Worker Type</th>
                <th>Count</th>
                <th>Share</th>
            </tr>
        </thead>
        <tbody id="worker-stats-body">
        </tbody>
    </table>
</div>
